generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  photo String
  description String
  verified Boolean @default(false)
  createdAt DateTime @default(now())
  role Roles @default(User)
}

model Movies{
  id Int @id @default(autoincrement())
  name String

}

enum Roles {
  User
  Moderator
  Administrator
}