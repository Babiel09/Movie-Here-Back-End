generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  photo Bytes @default("")
  description String @default("")
  verified Boolean @default(false)
  createdAt DateTime @default(now())
  role Roles @default(User)
}


enum Roles {
  User
  Moderator
  Administrator
}