generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  photo Bytes @default("")
  description String @default("")
  verified Boolean @default(false)
  twoStetps Boolean @default(false)
  createdAt DateTime @default(now())
  digits Int[] @default([])
  comments String @default("")
  votes Float @default(0.0) 
  allUpVotes UpVotes[]  @relation("UserVotes")
  allComments Comments[] @relation("UserComments")
  role Roles @default(User)
}

model Comments{
  id Int @id @default(autoincrement())
  user User  @relation(fields: [userId], references: [id], name:"UserComments")
  userId Int
}
model UpVotes{
    id Int @id @default(autoincrement())
   user User  @relation(fields: [userId], references: [id], name:"UserVotes")
   userId Int
}

enum Roles {
  User
  Moderator
  Administrator
}